# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'bistox' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for bistox

  # Share
  pod 'Fabric'
  pod 'Crashlytics'

  # layout manager
  pod 'SnapKit', '~> 4.0.0'

  # reactive
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'

  # persistance
  pod 'RealmSwift'

  # networking
  pod 'Moya/ReactiveSwift', '~> 11.0'
  
  #keyboard manager
  pod 'IQKeyboardManagerSwift', '5.0.0'
  
  #font awesome
  pod 'Font-Awesome-Swift', '~> 1.7.2'
  
  #drop down
  pod 'DropDown', '2.3.2'
  
  target 'bistoxTests' do
    inherit! :search_paths
    # Pods for testing
  end


  target 'bistoxUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
